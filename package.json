{
  "name": "sarvajn-backend",
  "private": true,
  "scripts": {
    "start": "turbo run start",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "lerna:bump": "lerna version --conventional-commits"
  },
  "devDependencies": {
    "lerna": "^9.0.3",
    "prettier": "^3.7.4",
    "turbo": "^2.8.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "api/*",
    "packages/*"
  ]
}
